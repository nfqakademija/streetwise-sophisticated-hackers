{% extends 'base.html.twig' %}

{% trans_default_domain "app" %}

{% form_theme comment_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ homework.title }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">{{ 'home'|trans }}</a></li>
        <li><a href="{{ path('homework_index') }}">{{ 'homework.homework'|trans }}</a></li>
        <li class="active">{{ homework.title }}</li>
    </ol>

    <h1 class="content-title">{{ homework.title }} <br /><small>{{ 'homework.homework'|trans }}</small></h1>
    <hr />
    <p>{{ 'date'|trans }}: {% if homework.dueDate %}{{ homework.dueDate|date('Y-m-d') }}{% endif %}</p>
    <p>{{ 'lecturer'|trans }}: <a href="{{ path('user_show', { 'id': homework.lecturer.id }) }}">{{ homework.lecturer }}</a></p>

    <article>{{ homework.description }}</article>


    <p><a href="{{ path('homework_index') }}">{{ 'back_to_the_list'|trans }}</a></p>
    <hr />
    <div class="assignment-block">
    {% if my_assignment is not null %}
        <h3>{{ 'assignment.my'|trans }}</h3>
        <p>{{ 'assignment.grade'|trans }}: {{ my_assignment.grade }}</p>
        <p>{{ 'assignment.file'|trans }}: <a href="{{ path('homework_download', { 'file': my_assignment.work }) }}">{{ my_assignment.work }}</a></p>
        <p><a class="btn btn-default" role="button" href="{{ path('assignment_show', { 'id': my_assignment.id }) }}">{{ 'show'|trans }}</a></p>
    {% elseif app.user.isStudent %}
        {% form_theme assignment_form 'bootstrap_3_horizontal_layout.html.twig' %}

        <h3>{{ 'assignment.new'|trans }}</h3>
        <div class="">
            {{ form_start(assignment_form) }}
            {{ form_widget(assignment_form) }}
            {{ form_end(assignment_form) }}
        </div>
    {% else %}
        <h3>{{ 'assignment.assignments'|trans }}</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{ 'student'|trans }}</th>
                    <th>{{ 'assignment.file'|trans }}</th>
                    <th>{{ 'assignment.grade'|trans }}</th>
                    <th>{{ 'action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for assignment in assignments %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': assignment.student.id }) }}">{{ assignment.student }}</a></td>
                        <td><a href="{{ path('homework_download', { 'file': assignment.work }) }}">{{ assignment.work }}</a></td>
                        <td>{{ assignment.grade }}</td>
                        <td><a href="{{ path('assignment_show', { 'id': assignment.id }) }}">{{ 'show'|trans }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    </div>
    <div class="comments-block">
        <h4>{{ 'comment.new'|trans }}</h4>
        <div class="form-horizontal">
            {{ form_start(comment_form) }}
            {{ form_widget(comment_form) }}
            <button class="btn btn-default center-block" type="submit">Submit</button>
            {{ form_end(comment_form) }}
        </div>
        {% for comment in comments %}
            <hr />
            <div class="comment">
                <p>{{ 'author'|trans }}: <a href="{{ path('user_show', { 'id': comment.author.id }) }}">{{ comment.author }}</a></p>
                <p>{{ 'comment.posted_on'|trans }}: {% if comment.date %}{{ comment.date|date('Y-m-d H:i') }}{% endif %}</p>
                {{ comment.content }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
