{% extends 'base.html.twig' %}

{% trans_default_domain "app" %}

{% form_theme comment_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme grade_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ 'assignment.assignment'|trans }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">{{ 'home'|trans }}</a></li>
        <li><a href="{{ path('homework_index') }}">{{ 'homework.homework'|trans }}</a></li>
        <li><a href="{{ path('homework_show', { 'id': assignment.homework.id }) }}">{{ assignment.homework.title }}</a></li>
        <li class="active">{{ 'assignment.assignment'|trans }}</li>
    </ol>

    <h1 class="content-title">{{ 'assignment.assignment'|trans }}</h1>
    <hr />
    <p>{{ 'student'|trans }}: <a href="{{ path('user_show', { 'id': assignment.student.id }) }}">{{ assignment.student }}</a></p>
    <p>{{ 'homework.due_date'|trans }}: {% if assignment.homework.dueDate %}{{ assignment.homework.dueDate|date('Y-m-d') }}{% endif %}</p>
    <p>{{ 'assignment.submitted'|trans }}: {% if assignment.date %}{{ assignment.date|date('Y-m-d') }}{% endif %}</p>
    <p>{{ 'assignment.file'|trans }}: <a href="{{ path('homework_download', { 'file': assignment.work }) }}">{{ assignment.work }}</a></p>
    <p>{{ 'assignment.grade'|trans }}: {{ assignment.grade }}</p>

    <p><a href="{{ path('homework_show', { 'id': assignment.homework.id }) }}">Back to homework</a></p>

    {% if assignment.homework.lecturer == app.user %}
        <div class="grade-block">
            <h4>{{ 'assignment.grade'|trans }}</h4>
            <div class="form-horizontal">
                {{ form_start(grade_form) }}
                {{ form_widget(grade_form) }}
                <button class="btn btn-default center-block" type="submit">Submit</button>
                {{ form_end(grade_form) }}
            </div>
        </div>
    {% endif %}

    <div class="comments-block">
        <h4>{{ 'comment.new'|trans }}</h4>
        <div class="form-horizontal">
            {{ form_start(comment_form) }}
            {{ form_widget(comment_form) }}
            <button class="btn btn-default center-block" type="submit">Submit</button>
            {{ form_end(comment_form) }}
        </div>
        {% for comment in comments %}
            <hr />
            <div class="comment">
                <p>{{ 'author'|trans }}: <a href="{{ path('user_show', { 'id': comment.author.id }) }}">{{ comment.author }}</a></p>
                <p>{{ 'comment.posted_on'|trans }}: {% if comment.date %}{{ comment.date|date('Y-m-d H:i') }}{% endif %}</p>
                {{ comment.content }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
