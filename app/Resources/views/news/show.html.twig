{% extends 'base.html.twig' %}

{% trans_default_domain "app" %}

{% form_theme comment_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">{{ 'home'|trans }}</a></li>
        <li><a href="{{ path('news_index') }}">{{ 'news.news'|trans }}</a></li>
        <li class="active">{{ news.title }}</li>
    </ol>

    <h1 class="content-title">{{ news.title }} <br /><small>{{ 'news.news'|trans }}</small></h1>
    <hr />
    <p>{{ 'author'|trans }}: <a href="{{ path('user_show', { 'id': news.author.id }) }}">{{ news.author }}</a></p>
    <p>{{ 'news.posted_on'|trans }}: {% if news.date %}{{ news.date|date('Y-m-d H:i') }}{% endif %}</p>

    <article>{{ news.description }}</article>


    <p><a href="{{ path('news_index') }}">{{ 'back_to_the_list'|trans }}</a></p>

    <div class="comments-block">
        <h4>{{ 'comment.new'|trans }}</h4>
        <div class="form-horizontal">
            {{ form_start(comment_form) }}
            {{ form_widget(comment_form) }}
            <button class="btn btn-default center-block" type="submit">Submit</button>
            {{ form_end(comment_form) }}
        </div>
        {% for comment in comments %}
            <hr />
            <div class="comment">
                <p>{{ 'author'|trans }}: <a href="{{ path('user_show', { 'id': comment.author.id }) }}">{{ comment.author }}</a></p>
                <p>{{ 'comment.posted_on'|trans }}: {% if comment.date %}{{ comment.date|date('Y-m-d H:i') }}{% endif %}</p>
                {{ comment.content }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
