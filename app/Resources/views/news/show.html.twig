{% extends 'base.html.twig' %}

{% trans_default_domain "app" %}

{% form_theme comment_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">{{ 'home'|trans }}</a></li>
        <li><a href="{{ path('news_index') }}">{{ 'news.news'|trans }}</a></li>
        <li class="active">{{ news.title }}</li>
    </ol>

    <h1 class="content-title">{{ news.title }} <br /><small>{{ 'news.news'|trans }}</small></h1>
    <div class="content-body border-top">
        <ul class="info-header">
            <li>{{ 'author'|trans }}: <a href="{{ path('user_show', { 'id': news.author.id }) }}">{{ news.author }}</a></li>
            <li>{{ 'news.posted_on'|trans }}: {% if news.date %}{{ news.date|date('Y-m-d H:i') }}{% endif %}</li>
        </ul>
        <article>{{ news.description|nl2br }}</article>

        <div class="back-link"><a href="{{ path('news_index') }}">{{ 'back_to_the_list'|trans }}</a></div>

    </div>

    {{ include('@AppBundle/views/includes/comments.html.twig', with_context = true) }}

{% endblock %}
