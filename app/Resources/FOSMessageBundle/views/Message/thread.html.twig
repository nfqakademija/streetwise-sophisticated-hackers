{% extends '@AppBundle/FOSMessageBundle/views/layout.html.twig' %}

{% trans_default_domain "app" %}

{% block fos_message_content %}

<h2>{% trans from 'FOSMessageBundle' %} subject {% endtrans %}: {{ thread.subject }}</h2>

<table>
	<tr>
		<th>{{ 'message.id'|trans }}</th>
		<th>{{ 'message.sender'|trans }}</th>
		<th>{{ 'message.createdat'|trans }}</th>
		<th>{{ 'message.body'|trans }}</th>
	</tr>
	{% for message in thread.messages %}
		<tr>
			<td>{{ message.id }}</td>
			<td>{{ message.sender }}</td>
			<td>{{ message.createdAt|date }}</td>
			<td>{{ message.body }}</td>
		</tr>
	{% endfor %}
</table>

<h3>{% trans from 'FOSMessageBundle' %}reply{% endtrans %}</h3>
<form action="{{ url('fos_message_thread_view', {'threadId': thread.id}) }}" method="post">
	{{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" />
	{{ form_end(form) }}
</form>

{% endblock %}
