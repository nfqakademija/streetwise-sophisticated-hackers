{% extends '@AppBundle/FOSMessageBundle/views/layout.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block fos_message_content %}

	<h2>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</h2>

	{% if recipient is defined %}
        <ul class="info-header">
            <li>
                <div class="row">
                    <div class="col-md-2 message-recipient">{% trans from 'FOSMessageBundle' %} recipient {% endtrans %}</div>
                    <div class="col-md-10"> <a href="{{ path('user_show', { 'id': recipient.id }) }}">{{ recipient.username }}</a> ({{ recipient.name }})</div>
                </div>
            </li>
        </ul>
    {% endif %}
	{{ form_start(form) }}
	{{ form_rest(form) }}
	<button type="submit" class="btn btn-default center-block">{% trans from 'FOSMessageBundle' %} send {% endtrans %}</button>
	{{ form_end(form) }}

{% endblock fos_message_content %}
